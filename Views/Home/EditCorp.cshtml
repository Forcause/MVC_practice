@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model WebApplication.Models.Corps

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование производителя</h1>

@using (Html.BeginForm())
{
    <h4>Производитель</h4>
    <p>
        Марка <br/>
        @Html.DisplayFor(model => model.Mark)
    </p>

    <p>
        Страна производителя <br/>
        @Html.EditorFor(model => model.Location)
    </p>

    <p>
        Президент компании <br/>
        @Html.EditorFor(model => model.President)
    </p>

    <p>
        Продукция <br/>
        @Html.EditorFor(model => model.Production)
    </p>

    <p>
    <input type="submit" value="Изменить производителя"/>
    </p>  
} 
<div>
    @Html.ActionLink("К списку производителей", "ShowCorps")
</div>